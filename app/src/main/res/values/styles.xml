<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextStyle">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:hint">@string/quantity_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/padding_edit_text</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ButtonBackStyle">
        <item name="android:layout_width">@dimen/button_back_width</item>
        <item name="android:layout_height">@dimen/button_back_height</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>

